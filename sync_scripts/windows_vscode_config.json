                "panel": "shared"
            }
        }
    ]
}

// .vscode/launch.json - Ë∞ÉËØïÈÖçÁΩÆ
{
    "version": "0.2.0", 
    "configurations": [
        {
            "name": "üêç Debug Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "üß™ Debug with Sample Data",
            "type": "python",
            "request": "launch", 
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "USE_SAMPLE_DATA": "1"
            },
            "justMyCode": false
        },
        {
            "name": "üéØ ResNet Training Debug",
            "type": "python",
            "request": "launch",
            "program": "baseline_training.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["--debug", "--epochs", "2", "--batch-size", "4"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}

// .vscode/settings.json - È°πÁõÆËÆæÁΩÆ
{
    "python.defaultInterpreterPath": "./venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    
    // Ê†ºÂºèÂåñËÆæÁΩÆ
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "editor.formatOnSave": true,
    
    // Êñá‰ª∂ÊéíÈô§ÔºàÈÅøÂÖç‰∏ä‰º†Â§ßÊñá‰ª∂Ôºâ
    "files.exclude": {
        "**/data": true,
        "**/results": true,
        "**/checkpoints": true, 
        "**/__pycache__": true,
        "**/*.pth": true,
        "**/*.pkl": true,
        "**/logs": true
    },
    
    // ÊêúÁ¥¢ÊéíÈô§
    "search.exclude": {
        "**/venv": true,
        "**/data": true,
        "**/results": true,
        "**/__pycache__": true
    },
    
    // ÁªàÁ´ØËÆæÁΩÆ
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.cwd": "${workspaceFolder}",
    
    // AutoDLÁâπÂÆöËÆæÁΩÆ
    "remote.SSH.configFile": "${userHome}/.ssh/config",
