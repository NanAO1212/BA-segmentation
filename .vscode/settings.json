{
    // 保留你的现有个人设置
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "workbench.colorTheme": "Visual Studio Light",
    "files.autoSave": "afterDelay",
    "remote.SSH.remotePlatform": {
        "connect.bjb1.seetacloud.com": "linux",
        "connect.westc.gpuhub.com": "linux",
        "connect.nmb1.seetacloud.com": "linux"
    },
    "explorer.confirmDelete": false,
    "window.customTitleBarVisibility": "windowed",
    "workbench.editor.showTabs": "single",
    "editor.fontSize": 12,
    "workbench.startupEditor": "none",
    "editor.accessibilitySupport": "on",
    "python.analysis.typeCheckingMode": "standard",
    "settingsSync.ignoredExtensions": [],
    // 你的Conda环境配置（精确路径）
    "python.defaultInterpreterPath": "C:/Users/nanao/conda/envs/torch-env/python.exe",
    "python.terminal.activateEnvironment": true,
    "python.condaPath": "C:/Users/nanao/conda/Scripts/conda.exe",
    "python.terminal.activateEnvInCurrentTerminal": true,
    // Python项目设置
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "editor.formatOnSave": true,
    "editor.rulers": [
        80,
        88,
        120
    ],
    "editor.tabSize": 4,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    // 排除大文件（避免误同步）
    "files.exclude": {
        "**/data": true,
        "**/results": true,
        "**/checkpoints": true,
        "**/__pycache__": true,
        "**/*.pth": true,
        "**/*.pkl": true,
        "**/logs": true,
        "**/venv": true
    },
    "search.exclude": {
        "**/data": true,
        "**/results": true,
        "**/__pycache__": true,
        "**/venv": true
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.cwd": "${workspaceFolder}",
    "python-envs.defaultEnvManager": "ms-python.python:conda",
    "python-envs.defaultPackageManager": "ms-python.python:conda",
    "python-envs.pythonProjects": []
}
