{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "编辑AutoDL配置",
            "type": "shell",
            "command": "notepad",
            "args": ["sync_scripts\\autodl_config.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            }
        },
        {
            "label": "SSH连接到SeetaCloud",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "ssh -p 47187 root@connect.nmb1.seetacloud.com"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            }
        },
        {
            "label": "完整同步到SeetaCloud",
            "type": "shell",
            "command": "cmd",
            "args": ["/c", "sync_scripts\\upload_to_autodl.bat"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "快速同步到SeetaCloud",
            "type": "shell",
            "command": "cmd",
            "args": ["/c", "sync_scripts\\quick_sync.bat"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "下载训练结果",
            "type": "shell",
            "command": "cmd",
            "args": ["/c", "sync_scripts\\download_results.bat"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}