{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "🐍 调试当前Python文件",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "🧪 使用样本数据调试",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "USE_SAMPLE_DATA": "1"
            },
            "justMyCode": false
        },
        {
            "name": "🎯 调试ResNet训练",
            "type": "python",
            "request": "launch",
            "program": "baseline_training.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["--debug", "--epochs", "2", "--batch-size", "4"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "📊 调试模型评估",
            "type": "python",
            "request": "launch",
            "program": "complete_evaluation.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}